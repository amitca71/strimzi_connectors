icreate connectors for JDBC and S3 for Strimizi
sudo snap install microk8s --classic
sudo microk8s kubectl config view --raw > ~/.kube/config
sudo chown -f -R ubuntu ~/.kube
sudo usermod -a -G microk8s ubuntu
sudo su - ubuntu (in order for the upper 2 take effect)
echo 'alias kubectl="microk8s kubectl"'>>~/.bash_aliases
. ~/.bash_aliases
sudo microk8s start
microk8s enable dns storage

https://strimzi.io/quickstarts/:
kubectl create namespace kafka
kubectl create -f 'https://strimzi.io/install/latest?namespace=kafka' -n kafka
kubectl apply -f https://strimzi.io/examples/latest/kafka/kafka-persistent-single.yaml -n kafka 
kubectl -n kafka run kafka-producer -ti --image=quay.io/strimzi/kafka:0.22.1-kafka-2.7.0 --rm=true --restart=Never -- bin/kafka-console-producer.sh --broker-list my-cluster-kafka-bootstrap:9092 --topic my-topic
kubectl -n kafka run kafka-consumer -ti --image=quay.io/strimzi/kafka:0.22.1-kafka-2.7.0 --rm=true --restart=Never -- bin/kafka-console-consumer.sh --bootstrap-server my-cluster-kafka-bootstrap:9092 --topic my-topic --from-beginning


kubectl -n kafka create -f connect_cluster.yml
kubectl -n kafka create -f jdbc_connector.yml
kubectl -n kafka create -fs3_connector.yml


dockers creation:
cat <<EOF >Dockerfile
FROM strimzi/kafka-connect
USER root:root
RUN mkdir -p /opt/kafka/plugins/jdbc
RUN mkdir -p /opt/kafka/plugins/s3
COPY ./confluentinc-kafka-connect-jdbc-10.0.2/lib /opt/kafka/plugins/jdbc/
COPY ./confluentinc-kafka-connect-s3-10.0.0/ /opt/kafka/plugins/confluent-s3/
USER 1001
EOF
docker build . -t amitca71/strimzi-connectors
docker push amitca71/strimzi-connectors
